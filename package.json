{
  "name": "sitevision-tools",
  "version": "0.2.3",
  "description": "Scaffolding and other miscellaneous tools for Sitevision development.",
  "keywords": [
    "Sitevision",
    "toolkit",
    "CLI"
  ],
  "author": "Hampus Nordin <nordin.hampus@gmail.com> (https://hampus.io/)",
  "types": "build/types/types.d.ts",
  "bin": {
    "sitevision-tools": "bin/sitevision-tools"
  },
  "scripts": {
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "cpy ./templates '../../build' --cwd=src",
    "build": "npm run clean-build && npm run compile && npm run copy-templates",
    "prepublishOnly": "npm run build",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "buttercup": "^6.17.2",
    "cosmiconfig": "7.0.1",
    "deepmerge-ts": "^5.1.0",
    "find-up": "^6.3.0",
    "gluegun": "^5.1.2",
    "lodash.pick": "^4.4.0",
    "node-machine-id": "^1.1.12",
    "untildify": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^12.7.11",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.2.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "overrides": {
    "gluegun": {
      "ejs": "^3.1.9"
    }
  }
}
